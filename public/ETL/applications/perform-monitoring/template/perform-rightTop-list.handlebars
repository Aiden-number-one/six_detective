 {{#if flag}} {{else}} {{#each this}}
<div class="rightTopStyle" style="position: relative;">
    <div style="width:32%;display:inline-block;height:58px;border-right: 1px solid #eeeeee;padding-left:10px;padding-top:5px">
        <div style="width:20%;float:left"><div class="{{judgeRightTopBorderColor executeFlag}}">{{judgeRightTopStatusName executeFlag}}</div></div><div style="float:right;width:80%;padding-left: 6px;">
            <p jobId={{jobId}} id="J_pm_top_jobno" style="color:#148ddf" class="perform-fr-text" title={{jobNo}}>{{jobNo}}</p>
            <p class="jobName" title={{jobName}}>{{jobName}}</p>
        </div>
    </div><div style="width:35%;display:inline-block;height:58px;border-right: 1px solid #eeeeee;padding-left:20px;padding-top:5px">
        <a href="javascript:;">
            <div class="perform-play" id="J_start_task">
                {{#equal isDependNewExecute "1"}}
                    {{#equal newExecuteFlag "R"}}
                    <img class="img-circle current-play" src="/assets/img/perform-stop.png"> {{else}}
                    <img class="img-circle" src="/assets/img/perform-start.png"> {{/equal}}
                {{else}}
                    {{#equal executeFlag "R"}}
                    <img class="img-circle current-play" src="/assets/img/perform-stop.png"> {{else}}
                    <img class="img-circle" src="/assets/img/perform-start.png"> {{/equal}}
                {{/equal}}
            </div>
        </a>
        <h4 class="fl" style="display: inline-block;margin-right: 30px;">Duration：{{formatDuringHelper zxsj}}</h4>
    </div><div style="width:33%;display:inline-block;height:58px;padding-left:20px;padding-top:5px">
        <div class="perform-time">
            <div>Start Time：{{dateTimeFormatHelper startTime}}</div>
            <div>End Time：{{dateTimeFormatHelper endTime}}</div>
        </div>
    </div>
</div>
{{/each}} {{/if}}